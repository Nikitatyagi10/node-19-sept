<%- include('./base/header.ejs')%>
<div class="container"></div>
    <div class="alert bg-success my-3">
        <h4 class="text-center" style="color:white"> student list </h4>
    </div>
</div>
<div class="container">
    <div class="row">
        <table class ="table text-center">
            <thead>
                <tr>
                    <th>rollNo</th>
                    <th>firstname</th>
                    <th>lastname</th>
                    <th>fathername</th>
                    <th>adhaar card</th>
                    <th>mobile no</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% students.forEach((student)=>{ %>
                <tr>

                    <td><%= student.rollNo %></td>
                    <td><%= student.firstname%></td>
                    <td><%= student.lastname %> </td>
                    <td><%= student.fathername %></td>
                    <td><%= student.adharNO %></td>
                    <td><%= student.mobileNO %></td>
                    <td>
                        <a href="/student/edit/page/<%= student._id%>" class="btn btn-warning w-40">Edit</a>
                        <a href="/delete/student/<%= student._id%>" class="btn btn-danger w-40">delete</a></td>
                </tr>

          <%  }) %>
        </table>
    </div>
</div>

<%- include('./base/footer.ejs')%>